<div id="content" style="background-color:#DFDFDF;">
<h2 style="background-color:#2A5388; width:657px; height:35px;">Product Reservation</h2>
    <div>
      <li id="tab">FEATURED</li>
      <div id="tabcontent"><%= image_tag "Advertisement/cp1.jpg", :style=>"float:left; height:160px; width:150px; margin-right:10px;" %>
         <%= form_for([@workshop, @workshop.crm_workshop_reservations.build]) do |f| %>
          <p>
           <b>Workshop Name:</b>
           <%= @workshop.workshop_desc %><br />
          </p>

          <p>
           <b>Workshop Date:</b>
           <%= @workshop.workshop_date %><br />
          </p>

          <p>
           <b>Workshop Location:</b>
           <%= @workshop.workshop_location %><br />
          </p><br />

          <%= f.submit 'Reserve' %> 
	       <span style="font-size: 12px; color: red;"><%= yield %></span>


        <% end %>	
          
     </div>
   </div>
  
   <div class="shadetabs" id="countrytabs">
   	<%= render "crm_workshop_lists/workshoplist" %>
   </div>
   
<script type="text/javascript">

var countries=new ddajaxtabs("countrytabs", "countrydivcontainer")
countries.setpersist(true)
countries.setselectedClassTarget("link") //"link" or "linkparent"
countries.init()

</script>
