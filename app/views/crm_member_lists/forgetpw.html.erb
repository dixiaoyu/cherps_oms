
<%= form_for(:crm_member_list, :url => checkemail_path) do |f| %>
   <p class="title">FORGOTTEN YOUR PASSWORD?</p>
   <table  cellspacing="2px" cellpadding="3px" >
     <tr>
       <td colspan="2" style="font-size:14px;">To retrieve your password or username, please enter your email address below and we'll send you an email with a link to reset your password.</td>
     </tr>
     <tr>
       <td colspan="2">EMAIL ADDRESS</td>
     </tr>
     <tr>
       <td><%= f.text_field :email_addr, :size=>"55" %></td>
       <td><%= image_submit_tag "submitbutton.png" %></td>
     </tr>
     <tr>
       <td colspan="2"></td>
     </tr>
     <tr>
       <td colspan="2" class="right"><p class="login-font">Are you a member? If not,&nbsp;<%= link_to "SIGN UP", signup_path %></p></td>
     </tr>
   </table>
   <div class="footer">
     <p>@ 2011 Challenger Technologies Limited. All Rights Reserved | <a href="#">Privacy & Security Policy</a></p>
   </div>
<% end %>